#!/bin/sh

volstat="$(pactl list sinks)"
# volstat="$(amixer get Master)" # ALSA only equivalent.

# echo "$volstat" | grep -q "Mute: yes" && printf "üîá\\n" && exit
echo "$volstat" | grep -q "Mute: yes" && printf "Muted \\n" && exit

vol="$(echo "$volstat" | grep '[0-9]\+%' | sed "s,.* \([0-9]\+\)%.*,\1,;1q")"

icon="ÔÄÅ"

 if [ "$vol" -gt  "100" ]; then
 	icon="[##########]"
 elif [ "$vol" -gt "90" ]; then
 	icon="[#########:]"
 elif [ "$vol" -gt "80" ]; then
 	icon="[########::]"
 elif [ "$vol" -gt "70" ]; then
 	icon="[#######:::]"
 elif [ "$vol" -gt "60" ]; then
 	icon="[######::::]"
 elif [ "$vol" -gt "50" ]; then
 	icon="[#####:::::]"
 elif [ "$vol" -gt "40" ]; then
 	icon="[####::::::]"
 elif [ "$vol" -gt "30" ]; then
 	icon="[###:::::::]"
 elif [ "$vol" -gt "20" ]; then
 	icon="[##::::::::]"
 elif [ "$vol" -gt  "10" ]; then
 	icon="[#:::::::::]"
 elif [ "$vol" == "" ]; then
 	icon="[#:::::::::]"
 else
 	icon=""
 fi
echo "Volume:" $icon 
